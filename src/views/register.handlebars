<div class="SessionContainer">
    <div class="divLogoSession">
        <img src="https://i.ibb.co/hd9vsgK/Logo-BK-Grande.png" alt="Logo-BK-Grande" border="0" class="logoGRD">
    </div>
    <h1>Registro</h1>
    <form id="registerForm" class="styleFormSession">
        <div
            style="display: flex; flex-direction: row; gap: 0.5em; width: 100%; align-items: center; justify-content: center;">
            <span class="material-symbols-outlined" style="position: absolute; margin-left: -16em;">
                badge
            </span>
            <input type="text" name="first_name" placeholder="Nombre" required>
        </div>
        <br />
        <div
            style="display: flex; flex-direction: row; gap: 0.5em; width: 100%; align-items: center; justify-content: center;">
            <span class="material-symbols-outlined" style="position: absolute; margin-left: -16em;">
                signature
            </span>
            <input type="text" name="last_name" placeholder="Apellido" required>
        </div>
        <br />
        <div
            style="display: flex; flex-direction: row; gap: 0.5em; width: 100%; align-items: center; justify-content: center;">
            <span class="material-symbols-outlined" style="position: absolute; margin-left: -16em;">
                alternate_email
            </span>
            <input type="email" name="email" placeholder="Correo" required>
        </div>
        <br />
        <div
            style="display: flex; flex-direction: row; gap: 0.5em; width: 100%; align-items: center; justify-content: center;">
            <span class="material-symbols-outlined" style="position: absolute; margin-left: -16em;">
                demography
            </span>
            <input type="number" name="age" placeholder="Edad" required>
        </div>
        <br />
        <div
            style="display: flex; flex-direction: row; gap: 0.5em; width: 100%; align-items: center; justify-content: center;">
            <span class="material-symbols-outlined" style="position: absolute; margin-left: -16em;">
                password
            </span>
            <input type="password" name="password" placeholder="Contraseña" required>
        </div>
        <br />
        <input class="boton" type="submit">
    </form>
    <p>¿Ya tienes una cuenta? <a href="/login">Ingresa aquí</a></p>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/register.js"></script>